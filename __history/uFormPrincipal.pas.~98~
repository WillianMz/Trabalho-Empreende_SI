var
  FormPrincipal: TFormPrincipal;

  myData : string;
  jsv : TJsonValue;
  originalObject : TJsonObject;
  jsPair : TJsonPair;
  jsArr : TJsonArray;
  jso : TJsonObject;
  i : integer;



